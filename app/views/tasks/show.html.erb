<h1>タスク詳細画面</h1>
<ul class="tasklist">
  <li>
    <p><span class="item_name">タスク名</span> <%= @task.title %></p>
    <p><span class="item_name">内容</span> <%= @task.content %></p>
    <p><span class="item_name">終了期限</span> <%= @task.deadline %></p>
  </li>
</ul>
<p><%= link_to 'Back', tasks_path(@task) %></p>
