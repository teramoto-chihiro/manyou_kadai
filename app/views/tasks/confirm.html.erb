<h3>以下の内容で送信しますか？</h3>
<%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :deadline %>
  <%= form.hidden_field :status %>
  <%= form.hidden_field :priority %>
  <div class="field">
    <p><span class="item_name">タスク名</span> <%= @task.title %></p>
  </div>
  <div class="field">
    <p><span class="item_name">内容</span> <%= @task.content %></p>
  </div>
  <div class="field">
    <p><span class="item_name">終了期限</span> <%= l @task.deadline, format: :long %></p>
  </div>
  <div class="field">
    <p><span class="item_name">ステータス</span> <%= @task.status %></p>
  </div>
  <div class="field">
  <p><span class="item_name">優先順位</span> <%= @task.priority %></p>
  </div>
  <div class="actions">
    <%= form.submit  "登録する" %>
    <%= form.submit "戻る", name: 'back' %>
  </div>
<% end %>
